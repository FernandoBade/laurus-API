generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Usuario {
    id             String   @id @default(uuid())
    nome           String
    sobrenome      String
    email          String   @unique
    telefone       String?
    senha          String
    dataNascimento DateTime?
    ativo          Boolean  @default(true)
    dataCadastro   DateTime @default(now())
    aparencia      String?
    idioma         String?
    moeda          String?
    formatoData    String?
    // outros campos...
}

model Log {
    id        String   @id @default(uuid())
    tipo      String
    mensagem  String
    usuarioId String?
    timestamp DateTime @default(now())
}